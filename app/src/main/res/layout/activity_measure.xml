    <com.tzj.tzjcustomview.studyview.MeasureTestView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black" />

    <com.tzj.tzjcustomview.studyview.MyTextView
        android:layout_width="wrap_content"
